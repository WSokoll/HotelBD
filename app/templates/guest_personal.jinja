{% extends "base.jinja" %}

{% block content %}
  <div class="justify-content-center row">
  <div class="col-4">
    <div class="card text-center mx-3 my-3">
      <div class="card-header">
        <h3 class="card-title">Personal information</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="{{ url_for('guest_personal.get_post') }}">
          {{ guest_personal_form.csrf_token }}

          <div class="form-floating mb-3">
            {{ guest_personal_form.first_name(class_="form-control") }}
            <label for="floatingInput">First name</label>
          </div>

          <div class="form-floating mb-3">
            {{ guest_personal_form.last_name(class_="form-control") }}
            <label for="floatingPassword">Last name</label>
          </div>

          <div class="form-floating mb-3">
            {{ guest_personal_form.age(class_="form-control") }}
            <label for="floatingPassword">Age</label>
          </div>

          <div class="form-floating mb-3">
            {{ guest_personal_form.email(class_="form-control") }}
            <label for="floatingPassword">Email</label>
          </div>

          <div class="form-floating">
            {{ guest_personal_form.tel_number(class_="form-control") }}
            <label for="floatingPassword">Phone number</label>
          </div>

          <button type="submit" class="btn btn-lg btn-primary mt-4 mb-2">Update</button>
        </form>
      </div>
    </div>
  </div>
  </div>
{% endblock %}
