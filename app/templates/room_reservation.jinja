{% extends "base.jinja" %}

{% block content %}
  <div class="justify-content-center row">
  <div class="col-4">
    <div class="card text-center mx-3 my-3">
      <div class="card-header">
        <h3 class="card-title">Room reservation</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="{{ url_for('room_reservation.get_post') }}">
          {{ room_res_form.csrf_token }}

          <div class="form-floating mb-3">
            {{ room_res_form.room_number(class_="form-control") }}
            <label for="floatingInput">Room number</label>
          </div>

          <div class="form-floating mb-3">
            {{ room_res_form.start_date(class_="form-control") }}
            <label for="floatingPassword">Start date</label>
          </div>

          <div class="form-floating mb-3">
            {{ room_res_form.end_date(class_="form-control") }}
            <label for="floatingPassword">End date</label>
          </div>

          <div class="form-floating mb-3">
            {{ room_res_form.num_of_people(class_="form-control") }}
            <label for="floatingPassword">Number of people</label>
          </div>

          <button type="submit" class="btn btn-lg btn-primary mt-4 mb-2">Make a reservation</button>
        </form>
      </div>
    </div>
  </div>
  </div>
{% endblock %}